@model AlaElTalab.Models.ServiceProvider
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit My Profile</title>
    <link rel="stylesheet" href="/css/edit-user.css">
</head>
<body>

    <div class="main" id="main">
        <nav>
            <div class="logo">
                <img src="/images/Untitled-design-16.png" valign="middle" hspace="10px">
                <h2>AlaElTalab</h2>
            </div>
            <div class="nav-links">
                <a asp-controller="ServiceProviders" asp-action="Index" class="active">Main Page</a>
                <a asp-controller="ServiceProviders" asp-action="Booking">My Bookings</a>
                <a asp-controller="ServiceProviders" asp-action="Account">My Account</a>
                <a asp-area="Identity" asp-page="/Account/Logout">Log Out</a>
            </div>
        </nav>
    </div>

    <div class="edit-container" id="edit-container">
        <h2>Edit My Profile</h2>
        <div id="step1">
            <div class="provider-card">
                <table cellspacing="20px">
                    <tr>
                        <td rowspan="2" colspan="2">
                            @if (!string.IsNullOrEmpty(Model.ProfileImage))
                            {
                                <img src="/uploads/@Model.ProfileImage" alt="Profile Picture">
                            }
                            else
                            {
                                <img src="/uploads/default-profile.png" alt="Profile Picture">
                            }
                        </td>
                    </tr>
                </table>

                <form asp-controller="ServiceProviders" asp-action="Edit" method="post" enctype="multipart/form-data">

                    <label for="profilePicture">Change Profile Picture:</label>
                    <input type="file" id="profilePicture" name="profilePicture" accept="image/*">

                    <label for="name">Full Name:</label>
                    <input type="text" id="name" value="@Model.Name" disabled>

                    <label for="username">Username:</label>
                    <input type="text" id="username" name="username" value="@Model.Username" required>

                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" value="@Model.Email" required>

                    <label for="address">City:</label>
                    <input type="text" id="address" name="city" value="@Model.City" required>

                    <label for="phone">Phone:</label>
                    <input type="tel" id="phone" name="phoneNumber" value="@Model.PhoneNumber"
                           pattern="[0-9]{10,15}" title="Phone number must be 10-15 digits" required>

                    <label for="price">Price:</label>
                    <input type="number" id="price" name="price" value="@Model.Price" step="0.01" min="0" required>

                    <button type="submit">Done</button>
                </form>

                <form asp-controller="ServiceProviders" asp-action="Account" method="get">
                    <button type="submit" style="margin-top: 10px;">Cancel</button>
                </form>
            </div>
        </div>
    </div>

</body>
</html>